<div class="container">
  <div class="row">
  <h1><%= params[:category] %></h1>
    <% if @plays.count == 0 %>
        <h3>THere are no plays currently in this category</h3>
      <% else %>
        <% @plays.each do |play| %>
          <div class="col-md-3 d-flex">
            <div class="card" style="width: 100%;">
              <a href="plays/ <%= play.id %>"><%= image_tag play.play_img.url(:thumb), class: "card-img-top play" %></a>
              <div class="card-body flex-fill">
                <h2 class="card-title"><%= play.title %></h2>
                  <% if play.category.present?  %>
                    <strong><%= play.category.name %></strong>
                  <% end %>         
                <%= link_to "view Play", play_path(play), class: "btn btn-primary" %>
              </div>
            </div>
          </div>  
        <% end %>
    <% end %>
  </div>
</div>