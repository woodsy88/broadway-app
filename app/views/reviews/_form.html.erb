
<%= render 'shared/errors', obj: @review %>
<%= form_for [@play, @review], class: "form-horizontal" do |f| %>

    <div id="review-rating"></div>

    <div class="form-group">
        <%= f.label :comment, class: " col-sm-2 control-label" %>
        <%= f.text_field :comment, class: "form-control" %>
    </div>

    <div class="panel-footer section-padding-sm">
        <%= f.submit 'Save', class: "btn btn-primary btn-block" %>
    </div>
<% end %>

<script>
    $('#review-rating').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
    });
</script>